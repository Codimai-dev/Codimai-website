rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Blog images folder - public read, authenticated write
    match /blog-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
